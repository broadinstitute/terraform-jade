{{with $project := env "PROJECT_NAME"}}
{{with $environment := env "ENVIRONMENT"}}
/*
* Provider Configurations
*/

provider "google" {
    credentials = "${file("{{$environment}}_svc.json")}"
    project = "${var.project}"
    region = "${var.region}"
}

provider "google-beta" {
    credentials = "${file("{{$environment}}_svc.json")}"
    project = "${var.project}"
    region = "${var.region}"
}
{{end}}
{{end}}
